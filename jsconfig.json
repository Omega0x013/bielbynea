{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "strict": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "fmt": {
    "files": {
      "exclude": [
        "node_modules/",
        "**/node_modules/*"
      ]
    }
  }
}
